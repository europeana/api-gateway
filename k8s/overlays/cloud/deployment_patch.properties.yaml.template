apiVersion: apps/v1
kind: Deployment
metadata:
  name: api-gateway-deployment
spec:
    replicas: ${MIN_REPLICAS}
    template:
      spec:
        containers:
          - name: api-gateway
            imagePullPolicy: Always
            resources:
              requests:
                memory: "${MEMORY_REQUEST}"
                cpu: "${CPU_REQUEST}"
              limits:
                memory: "${MEMORY_LIMIT}"
                cpu: "${CPU_LIMIT}"