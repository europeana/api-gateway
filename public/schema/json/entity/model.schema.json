            },
            "required": [ "id", "type", "source" ],
            "additionalProperties": false
        },

        "Identifier": {
            "type": "array",
            "description": "An identifier for the entity.",
            "example": [ "12345" ],
            "minItems": 1,
            "items": { "type": "string" }
        },
        "SameAs": {
            "type": "array",
            "description": "URI of an equivalent entity in other vocabulary or data source.",
