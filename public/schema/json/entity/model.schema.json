            "items": { "type": "string", "format": "uri" }
        },
        "InScheme": {
            "type": "array",
            "description": "The concept scheme(s) that this entity belongs to.",
            "example": [ "http://data.europeana.eu/scheme/1" ],
            "minItems": 1,
            "items": { "type": "string", "format": "uri" }
        },

        "Aggregation": {
            "type": "object",
            "description": "Represents the results of consolidating into a single representation the metadata obtained from different data sources.",
            "properties": {
                "id"         : { "$ref": "#/definitions/AggregationURI"  },
                "type"       : { "$ref": "#/definitions/AggregationType" },
                "created"    : {
                    "type"  : "string",
                    "format": "date-time",
                    "description": "The time at which the entity was first created in Europeana. The value must be a Literal expressed as xsd:dateTime with the UTC timezone expressed as 'Z'.",
                    "example": "2020-11-12T15:56:44Z"
                },
                "modified"   : {
                    "type"  : "string",
                    "format": "date-time",
                    "description": "The time at which the metadata for the entity was modified as a result of an update from the source vocabulary or manually. The value must be a Literal expressed as xsd:dateTime with the UTC timezone expressed as 'Z'.",
                    "example": "2021-11-12T15:56:44Z"
                },
                "pageRank"   : {
                    "type": "number", "minimum": 0,
                    "description": "A non-negative integer specifying the page rank obtained from Wikidata for this resource.",
                    "example": 61
                },
                "recordCount": { 
                    "type": "integer", "minimum": 0,
                    "description": "A non-negative integer specifying the number of items in Europeana that refer to this entity.",
                    "example": 597136
                },
                "score"      : {
                    "type": "number", "minimum": 0,
                    "description": "A non-negative integer specifying the score number to be used when ranking this entity in search, suggest and enrich methods.",
                    "example": 2465352
                },
                "aggregates" : {
                    "type": "array",
                    "description": "The identifiers of all aggregations from which the metadata for this entity was obtained from and consolidated.",
                    "example": [ "http://data.europeana.eu/agent/60404#aggr_europeana" ],
                    "minItems": 1,
                    "items": {
                        "oneOf": [
                            { "type": "string", "format": "uri" }
                        ]
                    }
                }
            },
            "required": [ "id", "type", "created", "modified" ],
            "additionalProperties": false
        },
        "Proxies": { 
            "type": "array",
            "description": "The proxies represent a snapshot of the metadata that was aggregated from source and which will be consolidated into the main entity.",
            "minItems": 1,
            "items": {
                "type": "object",
                "oneOf": [
                    { "$ref": "#/definitions/Agent"        },
                    { "$ref": "#/definitions/Place"        },
                    { "$ref": "#/definitions/Concept"      },
                    { "$ref": "#/definitions/TimeSpan"     },
                    { "$ref": "#/definitions/Organization" }
                ],
                "not": { 
                    "type": "object"
                  , "required": [ "@context", "proxies", "isAggregatedBy" ] 
                }
            } 
        },
        "ProxyAggregation": {
            "type": "object",
            "description": "Represents the result of the aggregation of metadata of this entity from a specific data source.",
            "properties": {
                "id"         : { "$ref": "#/definitions/AggregationURI"  },
                "type"       : { "$ref": "#/definitions/AggregationType" },
                "created"    : {
                    "type"  : "string",
                    "format": "date-time",
                    "description": "The time at which the metadata was obtained from the source. The value must be a Literal expressed as xsd:dateTime with the UTC timezone expressed as 'Z'.",
                    "example": "2020-11-12T15:56:44Z"
                },
                "modified"   : {
                    "type"  : "string",
                    "format": "date-time",
                    "description": "The time at which the metadata was modified from the source, after creation. The value must be a Literal expressed as xsd:dateTime with the UTC timezone expressed as 'Z'.",
                    "example": "2021-11-12T15:56:44Z"
                },
                "rights"     : {
                    "type": "string", "format": "uri",
                    "description": "The uri of the rights statement that indicates the copyright, usage and access rights of the metadata of the entity.",
                    "example": "http://creativecommons.org/publicdomain/zero/1.0/"                
                },
                "source"   : {
                    "type": "string", "format": "uri",
                    "description": "The URI of the source vocabulary where the metadata for the entity was obtained from.",
                    "example": "https://www.wikidata.org"

                }
            },
            "required": [ "id", "type", "created", "modified" ],
            "additionalProperties": false
        },

        "AggregationURI": {
            "type": "string", "format": "uri",
            "description": "The identifier of the aggregation.",
            "example": "http://data.europeana.eu/agent/60404#aggregation"
        },
        "AggregationType": {
            "type": "string", "const": "Aggregation",
            "example": "Aggregation"
        },
        "WebResourceURL": {
            "type": "string", "format": "uri",
            "description": "The URL of the media resource",
            "example": "https://lh3.googleusercontent.com/7qzT0pbclLB7y3fdS1GxzMnV7m3gD3gWnhlquhFaJSn6gNOvMmTUAX3wVlTzhMXIs8kM9IH8AsjHNVTs8em3XQI6uMY=s0"
        },
        "WebResourceType": {
            "type": "string", "const": "WebResource",
            "example": "WebResource"
        },
        "WebResourceSource": {
            "type": "string", "format": "uri",
            "description": "The source where the media resource was obtained from, typically the identifier of a record",
            "example": "http://data.europeana.eu/item/90402/SK_A_4691"
        },
        "WikiSource": {
            "type": "string", "format": "uri",
            "description": "The source where the media resource was obtained from, typically an image from Wikimedia Commmons",
            "example": "http://commons.wikimedia.org/wiki/File:Logo_BnF.svg"
        },
        "Thumbnail": {
            "type": "string", "format": "uri",
            "description": "The URL of a lower resolution thumbnail",
            "example": "https://api.europeana.eu/thumbnail/v2/url.json?uri=https%3A%2F%2Fwww.rijksmuseum.nl%2Fassetimage2.jsp%3Fid%3DSK-A-4691&type=IMAGE"
        },

        "ReferenceId": {
            "type": "object",
            "properties": {
                "@id" : { "type": "string", "format": "uri" }
            },
            "additionalProperties": false
        }
    }
